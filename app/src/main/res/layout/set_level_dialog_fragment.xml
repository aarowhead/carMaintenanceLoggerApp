<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_date_picker_view_switcher"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/level_indicator_layout"
            android:id="@+id/level_indicator_layout"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/mileage_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Mileage"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/level_indicator_layout"/>

        <TextView
            android:id="@+id/save_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mileage_edit_text"
            tools:text="May 22, 2018"/>

        <ImageView
            android:id="@+id/edit_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black_24dp"
            app:layout_constraintTop_toTopOf="@id/save_date_text_view"
            app:layout_constraintBottom_toBottomOf="@id/save_date_text_view"
            app:layout_constraintStart_toEndOf="@id/save_date_text_view"/>

    </android.support.constraint.ConstraintLayout>

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</ViewSwitcher>
